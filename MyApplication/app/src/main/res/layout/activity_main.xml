<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <!-- 当前时间 -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前时间：00:00:00"
        android:textSize="20sp"
        android:textColor="#FFC0CB"

        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="24dp" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用梦工厂管理系统"
        android:textSize="29sp"
        android:textColor="#764747"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:gravity="center" />

    <!-- 按钮容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp">

        <!-- 跳转到用户登录界面按钮 -->
        <Button
            android:id="@+id/btn_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textSize="16sp"
            android:background="@drawable/button_background_primary"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="14dp"
            android:elevation="4dp" />

        <!-- 跳转到用户注册界面按钮 -->
        <Button
            android:id="@+id/btn_user_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textSize="16sp"
            android:background="@drawable/button_background_secondary"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="14dp"
            android:elevation="4dp" />

        <!-- 跳转到管理员登录界面按钮 -->
        <Button
            android:id="@+id/btn_admin_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_primary"
            android:elevation="4dp"
            android:padding="14dp"
            android:text="管理员登录"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
